
<div class="container">
  <div class="row mt-4">
    <div class="col-8">
      <div class="image-cover">
        <div class="image-item">
          <%= cl_image_tag @tool.photos.first.key, height: 300, width: 400, crop: :fill %>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="image-grid">
        <% @tool.photos.each do |photo| %>
          <div class="image-item">
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%# Tool information %>
  <div class="row mt-4">
    <div class="col-8">
      <h2><%=@tool.name %></h2>
      <div class="">
        <div class="">
          <div>
            <p><%=@tool.description %></p>
          </div>
          <h3 class=""><%=@tool.category%></h3>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="booking-form">
        <%= simple_form_for [@tool, @booking] do |f| %>
          <div class="form-inputs">
            <%= f.input :start_date, label: "dÃ©but", as: :string, input_html: { data: { controller: "datepicker"}}%>
          </div>
          <div class="form-inputs">
            <%= f.input :end_date, label: "fin", as: :string, input_html: { data: { controller: "datepicker"}}%>
          </div>
          <div class="form-inputs">
            <%= f.submit "Reserver", class: "btn btn-primary"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Gallery -->
</div>
