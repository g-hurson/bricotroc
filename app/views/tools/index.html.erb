              <h2><%= tool.name %></h2>
              <div>
                <%= link_to "#", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
                <i class="fa-solid fa-trash-can text-dark"></i>
                <% end %>
              </div>
          </div>
          <div class="index-card-tool-desc">
            <p><%= tool.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
